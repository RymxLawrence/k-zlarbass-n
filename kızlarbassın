closeBtn.BackgroundColor3 = Color3.fromRGB(255, 128, 128)
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", closeBtn)

-- Tƒ±kla ve Parla
local clickBtn = Instance.new("TextButton", frame)
clickBtn.Size = UDim2.new(0.8, 0, 0, 50)
clickBtn.Position = UDim2.new(0.1, 0, 0.5, -25)
clickBtn.Text = "‚ú® Tƒ±kla ve Parla ‚ú®"
clickBtn.Font = Enum.Font.GothamBold
clickBtn.TextSize = 20
clickBtn.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
clickBtn.TextColor3 = Color3.fromRGB(50, 0, 50)
Instance.new("UICorner", clickBtn)

-- Mesajlar
local messages = {
    "≈ûaka yaptƒ±m g√ºzel kƒ±z yok benim i√ßin...",
    "Vardƒ± biri...",
    "Gitti, kƒ±rdƒ± beni.",
    "Kƒ±rƒ±lmak ne kelime...",
    "√ñld√ºm ben."
}

local msgLabel = Instance.new("TextLabel", frame)
msgLabel.Size = UDim2.new(1, -20, 0, 120)
msgLabel.Position = UDim2.new(0, 10, 1, -170)
msgLabel.Text = ""
