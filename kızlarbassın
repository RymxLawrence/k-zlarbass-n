msgLabel.TextSize = 22
msgLabel.TextColor3 = Color3.fromRGB(255, 180, 250)
msgLabel.BackgroundTransparency = 1

clickBtn.MouseButton1Click:Connect(function()
    clickBtn.Visible = false
    for _, msg in ipairs(messages) do
        msgLabel.Text = msg
        wait(2.5)
    end
end)

-- Popup Arkaplan
local popupBG = Instance.new("Frame", gui)
popupBG.Size = UDim2.new(0, 400, 0, 60)
popupBG.Position = UDim2.new(0.5, -200, 0.4, 0)
popupBG.BackgroundColor3 = Color3.fromRGB(255, 192, 203)
popupBG.BackgroundTransparency = 1
popupBG.Visible = false
Instance.new("UICorner", popupBG)

-- Popup Yazƒ±sƒ±
local popupText = Instance.new("TextLabel", popupBG)
popupText.Size = UDim2.new(1, 0, 1, 0)
popupText.Position = UDim2.new(0, 0, 0, 0)
popupText.BackgroundTransparency = 1
popupText.Text = ""
popupText.TextColor3 = Color3.fromRGB(100, 0, 50)
popupText.TextSize = 24
popupText.Font = Enum.Font.Antique
popupText.TextWrapped = true

-- Kapatƒ±lƒ±nca √ßƒ±kan
local function showPopup(message)
    popupBG.Visible = true
    popupBG.BackgroundTransparency = 0.2
    popupText.Text = message
    popupText.TextTransparency = 0
    wait(3)
    popupText.TextTransparency = 1
    popupBG.BackgroundTransparency = 1
    popupBG.Visible = false
end

-- ‚ùå Kapat butonu
closeBtn.MouseButton1Click:Connect(function()
    TweenService:Create(frame, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
        Position = frame.Position - UDim2.new(1.2, 0, 0, 0)
    }):Play()
    wait(0.6)
    showPopup("Hayallerimi de b√∂yle kaydƒ±rdƒ±n...")
end)

-- Gizleme butonu (-)
minimizeBtn.MouseButton1Click:Connect(function()
    frame.Visible = false
    showPopup("Men√º gizlendi. Ama kalbim h√¢l√¢ a√ßƒ±k...")
end)

-- CTRL ile geri getirme
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.LeftControl or input.KeyCode == Enum.KeyCode.RightControl then
        if not frame.Visible then
            local ask = Instance.new("TextButton", gui)
            ask.Size = UDim2.new(0, 400, 0, 100)
            ask.Position = UDim2.new(0.5, -200, 0.4, 70)
            ask.BackgroundColor3 = Color3.fromRGB(255, 200, 230)
            ask.TextColor3 = Color3.fromRGB(60, 0, 60)
            ask.Font = Enum.Font.SpecialElite
            ask.TextSize = 20
            ask.TextWrapped = true
            ask.Text = "Bu kalbi bir daha kƒ±rmayacaksan men√ºy√º geri getiririm. Kabul ediyor musun? (E/H)"
            Instance.new("UICorner", ask)

            local connection
            connection = UserInputService.InputBegan:Connect(function(key)
                if key.KeyCode == Enum.KeyCode.E then
                    frame.Visible = true
                    ask:Destroy()
                    connection:Disconnect()
                elseif key.KeyCode == Enum.KeyCode.H then
                    ask.Text = "Zaten hep b√∂yle oldu... Ben inandƒ±m, sen gittin."
                    wait(3)
                    ask:Destroy()
                    connection:Disconnect()
                end
            end)
        end
    end
end)
")
