print("-- Anime Men√º GUI (Executor i√ßin optimize edildi)
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")

-- Eski GUI varsa sil
if CoreGui:FindFirstChild("BrokenHeartGUI") then
    CoreGui:FindFirstChild("BrokenHeartGUI"):Destroy()
end

local gui = Instance.new("ScreenGui", CoreGui)
gui.Name = "BrokenHeartGUI"
